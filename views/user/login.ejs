<%- layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <h1 class="col-8 offset-4" style="color: red; text-shadow:2px 2px 3px black"><b>Login to Wonder-Place</b></h1> <br><br><hr>
            <div class="col-8 offset-2"> 
                <form method="post" action="/login" class="needs-validation"
                    novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label"><b>Username :</b></label>
                        <input name="username" id="username" placeholder="enter username" type="text" class="form-control"
                            required />
                    </div>


                    <div class="mb-3">
                        <label for="password" class="form-label"><b>Password :</b></label>
                        <input name="password" id="password" placeholder="*************" type="password" class="form-control"
                            required />
                        <div class="invalid-feedback">
                            invalid Password! 
                        </div>
                    </div>
                    <button class="btn btn-success">Login</button>
                </form>    
            </div>
        </div>
    </body>            