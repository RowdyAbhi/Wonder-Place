<%- layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <h1 class="col-8 offset-3" style="color: red; text-shadow:2px 2px 3px black"><b>SignUp for Wonder-Place</b></h1> <br><br><hr>
            <div class="col-8 offset-2"> 
                <form method="post" action="/signup" class="needs-validation"
                    novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label"><b>Username :</b></label>
                        <input name="username" id="username" placeholder="enter username" type="text" class="form-control"
                            required />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label"><b>email :</b></label>
                        <input name="email" id="email" placeholder="xyz@gmail.com" type="email" class="form-control"
                            required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label"><b>Password :</b></label>
                        <input name="password" id="password" placeholder="*************" type="password" class="form-control"
                            required />
                        <div class="invalid-feedback">
                            Password must contail atleast one letter and a number 
                        </div>
                    </div>
                    <button class="btn btn-success">SignUp</button>
                </form>    
            </div>
        </div>
    </body>            